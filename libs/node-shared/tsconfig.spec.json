{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./out-tsc/vitest",
        "lib": ["ES2022"],
        "types": [
            "vitest/globals",
            "vitest/importMeta",
            "vite/client",
            "vitest",
            "node"
        ]
    },
    "include": [
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs",
        "src/**/*.d.ts",
        "**/__tests__/**/*.{ts,js}"
    ],
    "references": [
        {
            "path": "./tsconfig.lib.json"
        }
    ]
}
