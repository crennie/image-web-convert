{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./out-tsc/vitest",
        "lib": ["DOM", "DOM.Iterable"],
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom",
            "vitest/importMeta",
            "vite/client",
            "node",
            "vitest",
            "@nx/react/typings/cssmodule.d.ts",
            "@nx/react/typings/image.d.ts"
        ],
        "jsx": "react-jsx"
    },
    "include": [
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "app/**/*.test.ts",
        "app/**/*.spec.ts",
        "app/**/*.test.tsx",
        "app/**/*.spec.tsx",
        "app/**/*.test.js",
        "app/**/*.spec.js",
        "app/**/*.test.jsx",
        "app/**/*.spec.jsx",
        "app/**/*.d.ts"
    ],
    "exclude": ["out-tsc", "dist"],
    "references": [
        {
            "path": "./tsconfig.app.json"
        }
    ]
}
