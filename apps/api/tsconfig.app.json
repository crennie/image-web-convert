{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "nodenext",
        "types": ["node", "express"],
        "rootDir": "src",
        "moduleResolution": "nodenext",
        "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo"
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "out-tsc",
        "dist",
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs"
    ],
    "references": [
        {
            "path": "../../libs/schemas/tsconfig.lib.json"
        },
        {
            "path": "../../libs/node-shared/tsconfig.lib.json"
        },
        {
            "path": "../../libs/observability/tsconfig.lib.json"
        }
    ]
}
