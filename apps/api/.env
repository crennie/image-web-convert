# Application
APP_VERSION=0.0.0
PORT=3000

# Body size limits
BODY_LIMIT_JSON=5mb
BODY_LIMIT_URLENCODED=10mb

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=20

# CORS
CORS_ORIGIN=http://localhost:4200

# File uploads (runs relative to repo root)
UPLOAD_DIR=./data/uploads
UPLOAD_TMP_DIR=./data/tmp

# DURING TESTING
ENABLE_OTEL=true
OTEL_LOG_FILE=./logs/app.log

# TESTING VALUES
SESSION_TTL_MINUTES=60
SESSION_MAX_FILES=2
SESSION_PER_FILE_BYTES=20000000
SESSION_MAX_TOTAL_BYTES=100000000
